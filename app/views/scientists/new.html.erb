<h1>Make a Scientist!</h1>
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |msg| %>
      <li style="color: red;"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @scientist do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :field_of_study %><br>
  <%= f.text_field :field_of_study %><br>

  <%= f.submit %>
<% end %>