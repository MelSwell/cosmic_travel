<h1>Planets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Light years from earth</th>
      <th>Nearest star</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= planet.distance_from_earth %></td>
        <td><%= planet.nearest_star %></td>
        <td><%= link_to 'Show', planet %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>The most visited planet is:</h1>
<%= link_to @most_visited_planet.name, planet_path(@most_visited_planet) %>
<br>
<br>
<br>
<%= button_to "Make a New Mission", new_mission_path, method: :get %>
